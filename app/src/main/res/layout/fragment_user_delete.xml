<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mareinc.marcospedraza.clienteandroidrest.UserDeleteFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/txt_user_delete_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el Id del usuario a Borrar"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/et_delete_user_frag"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_delete_frag"
            android:background="@drawable/border_style_edittext"
            android:hint="Id"/>


        <Button
            android:id="@+id/btn_delete_user_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:layout_below="@+id/et_delete_user_frag"
            android:textAllCaps="false"
            />

    </RelativeLayout>


</FrameLayout>
